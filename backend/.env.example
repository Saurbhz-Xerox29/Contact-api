# Backend environment variables
PORT=5000

# Optional: database name override (defaults to NodeJs_Mastery_Course)
DB_NAME=NodeJs_Mastery_Course

# Optional: allowed frontend origins (comma-separated). Use * to allow all.
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Local MongoDB example:
MONGO_URI=mongodb://127.0.0.1:27017/NodeJs_Mastery_Course

# OR MongoDB Atlas example (replace with your values):
# MONGO_URI=mongodb+srv://<username>:<password>@<cluster>/<db>?retryWrites=true&w=majority

JWT=change_me_to_a_long_random_secret
JWT_EXPIRES_IN=1d